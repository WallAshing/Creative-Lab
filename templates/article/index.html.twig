{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<section class="container-section">
    <div class="article-description margin-body">
        <a href="{{ path('app_blog') }}"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 27.002 15.753"><g id="arrow-left" transform="translate(-4.498 -10.123)"><path id="Tracé_38" data-name="Tracé 38" d="M13.171,10.454a1.125,1.125,0,0,1,0,1.593L7.216,18l5.956,5.954a1.126,1.126,0,0,1-1.593,1.593L4.829,18.8a1.125,1.125,0,0,1,0-1.593l6.75-6.75a1.125,1.125,0,0,1,1.593,0Z" fill-rule="evenodd"/><path id="Tracé_39" data-name="Tracé 39" d="M5.625,18A1.125,1.125,0,0,1,6.75,16.875H30.375a1.125,1.125,0,0,1,0,2.25H6.75A1.125,1.125,0,0,1,5.625,18Z" fill-rule="evenodd"/></g></svg></a>
        <h2>{{ post.title }}</h2>
        <p class="text">{{ post.description }}</p>
    </div>
</section>

<section class="article-image margin-body">
    <img src="{{asset("upload/posts/images/")}}{{ post.picture }}" alt="image d'illustration de l'article">
    <p class="text">{{ post.secondDescription }}</p>
</section>

<section class="container-more-tutos">

    <div class="background-container-more-tutos">
    </div>

    <div class="more-tutos margin-body">
    
        <h2>D'autres tutos :</h2>

        <div class="container-articles-projets-blog container-articles-projets-blog_bottom">
            {# Card article projets #}
            {% for article in postLikes %}
                {% if article.isOnline %}
                    <div class="card-articles-projets-blog">
                        <img src="{{asset("upload/posts/images/")}}{{ article.picture }}" alt="image d'illustration de l'article">
                        <div class="description-card-projets-blog">
                            <h4>{{ article.title | length > 20 ? article.title | slice(0, 20) ~ '...' : article.title }}</h4>
                            <p class="text">{{ article.description | length > 80 ? article.description | slice(0, 77) ~ '...' : article.description }}</p>
                            <button><a href="{{ path('app_blog_show', {'id': article.id }) }}">Lire</a></button>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

    </div>
</section>

{% endblock %}
